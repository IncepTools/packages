{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Next.js",
    "extends": "./base.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "allowJs": true,
        "jsx": "preserve",
        "noEmit": true,

        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "incremental": true,
        "isolatedModules": true,
        "useUnknownInCatchVariables": true
    },
    "include": [
        "src",
        "next-env.d.ts",
        "../types/next-auth.d.ts",
        "../types/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}